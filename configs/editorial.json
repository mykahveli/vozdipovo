{
  "_comment": "config central, schema estrito, pools de modelos, ids de categorias, tuning de throughput",
  "version": 1,
  "pipeline": {
    "rss_max_age_hours": 72,
    "rss_drop_if_no_pub_date": true,
    "scrape_limit_per_run": 500,
    "judge_limit_per_run": 200,
    "generate_limit_per_run": 30,
    "revision_limit_per_run": 30,
    "publish_limit_per_run": 30,
